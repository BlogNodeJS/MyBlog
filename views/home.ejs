<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../views/partials/head %>
    <style>
        .background {
            background-image: url(http://hachick.com/image/bg.png);
        }

    </style>

</head>
<!--<body class="container">-->
<body>
<form>
    <div class="background">
        <div class="container">
            <!--<div class="back-top affix" data-spy="affix" data-offset-top="500">-->
            <!--<a href="#"><img src="http://b0.ttimg.vn/img/img_201302/icon_backTop.gif" alt="back to top"></a>-->
            <!--</div>-->
            <!--<a href="" id="back-to-top"><i class="icon-long-arrow-up"></i></a>-->
            <a href="#" class="back-to-top"><i class="icon-long-arrow-up"></i></a>

            <div>
                <header>
                    <% include ../views/partials/header %>
                </header>
                <main style="background-color: aliceblue ">

                    <div id="blog" class="row">
                        <!--body left-->
                        <div class="col-md-3" style="
                            background-image: url(http://hachick.com/image/bgRight.png);
                            margin-left: 15px;
                            margin-top: 0px;margin-right:0px;&nbsp;;
                            height: 100%;">

                            <ul>
                                <li>
                                    <div class="content" style="margin-top: 20px;">
                                        <div class="img">
                                            <img src="<%= user.avatar %>"
                                                 alt="Profile" style="width: 200px;height:200px;">
                                        </div>
                                        <div class="text">
                                            <h4><a href="#">Hi,I'm <%= user.username %></a></h4>

                                            <h5><%= user.aboutMe %></h5>
                                        </div>
                                    </div>
                                </li>

                            </ul>
                            <hr>
                            <ul>
                                <li>
                                    <p style="padding-left:0;">CATAGORY<i class="icon-caret-down"></i></p>
                                    <ul>
                                        <% arrCategory.forEach(function(c){ %>
                                        <li>
                                            <a href="/postByCategoryname"><%= c.categoryName %></a>
                                        </li>

                                        <% });%>
                                    </ul>
                                </li>
                            </ul>
                            <hr>
                            <ul>
                                <li class="sl-menu ext-menu">
                                    <p style="padding-left:0;">BÀI VIẾT MỚI<i class="icon-caret-down"></i></p>
                                    <ul>
                                        <% arrNewPost.forEach(function(newpost) { %>
                                        <li>
                                            <a href="#"><%= newpost.title %></a>
                                        </li>
                                        <% });%>
                                    </ul>
                                </li>
                            </ul>
                            <hr>
                            <ul>
                                <li class="sl-menu ext-menu item-1230">
                                    <p style="padding-left:0;">TAG</p>
                                    <% arrTag.forEach( function(t){ %>
                                        <a href="#"><%= t.tagsName %></a>
                                    <% });%>
                                </li>

                            </ul>
                        </div>

                        <!--body right-->
                        <table cellspacing="0"
                               style="border-collapse:collapse;margin-left: 10px; background-image: url(http://hachick.com/image/bgLeft.png);margin-top: 5px;margin-right: 5px;/* margin-left: 5px; */border-bottom-left-radius: 1px;border-left: aqua;">
                            <% arrPost.forEach(function(p){ %>
                            <tr>
                                <td>
                                    <div class="wrap_right_child">
                                        <div>
                                            <div class="wrap_right_child_title">
                                                <font color="#00afdb" size="6pt">
                                                    <span id="phContent_ddlArticle_lbStt_0"><%= p._id %></span>/
                                                </font>
                                                <a id="phContent_ddlArticle_hplTitle_0" href="/postDetail?id=<%=p._id %>"><%= p.title %></a>
                                            </div>
                                            <div class="wrap_right_child_other">
                                                Đăng bởi <b>
                                                <span id="phContent_ddlArticle_lbAuthor_0">Hi,I'm GOSU</span></b>,
                                                ngày <b>
                                                <span id="phContent_ddlArticle_lbDateCreated_0"><%= p.date %></span></b>
                                                - Lấy từ nguồn <b>
                                                <span id="phContent_ddlArticle_lbSource_0">MyBlog.vn</span></b>
                                                - <b>
                                                <span id="phContent_ddlArticle_lbView_0">1M</span></b>
                                                lượt xem
                                            </div>
                                            <div class="wrap_right_child_thumb">
                                                <a id="phContent_ddlArticle_hplImage_0" href="/postDetail?id=<%=p._id %>"><img
                                                        id="phContent_ddlArticle_imgThumb_0"
                                                        src="<%= p.image %>"></a>
                                            </div>
                                            <div class="wrap_right_child_content">
                                                <%= p.description %>
                                            </div>

                                        </div>
                                    </div>
                                </td>
                            </tr>

                            <% });%>
                        </table>
                        <footer>
                            <% include ../views/partials/footer %>
                        </footer>

                    </div>


                </main>
            </div>
        </div>

    </div>

</form>
</body>
</html>
