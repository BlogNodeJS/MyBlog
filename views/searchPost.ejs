<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../views/partials/head %>
    <style>
        .background {
            background-image: url(http://hachick.com/image/bg.png);
        }

    </style>
    <meta charset="utf-8">
    <meta name='ckeditor-sample-required-plugins' content='sourcearea'>
    <script src='/js/ckeditor.js'></script>
    <script src='/js/sample.js'></script>
    <link href='css/sample.css' rel='stylesheet'>
    <script src="/js/post.js"></script>
    <!--<link rel="stylesheet" type="text/css" href='/fonts/Rancho-Regular.ttf'>-->
    <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Rancho">


</head>
<!--<body class="container">-->
<body>
<form>
    <!--<div class="background">-->
    <div class="container">
        <a href="#" class="back-to-top"><i class="icon-long-arrow-up"></i></a>

        <div>
            <header>
                <% include ../views/partials/header %>
            </header>
            <main style="background-image: url(http://hachick.com/image/bgRight.png)">

                <div id="blog" class="row">
                    <!--body left-->

                    <div class="col-md-3" style="
                            background-image: url(http://hachick.com/image/bgRight.png);
                            margin-left: 15px;
                            margin-top: 0px;margin-right:0px;&nbsp;;
                            height: 100%;">

                        <% include partials/bodyleft.ejs %>
                    </div>

                    <!--body right-->
                    <div class="bd-right">
                        <div style="margin-left: 10px;margin-right: 0px;">

                            <div id="" class="clearfix">
                                <form id="header-search-form" class="fl" accept-charset="utf-8" method="post"
                                      action="/searchPost" style="margin: 0px;">

                                    <li class="ml-menu" style="margin-top: 20px; margin-left: 17px;   ">

                                        <div class="tt-search">

                                            <input style="height: 24px;width: 300px;" type="text" placeholder="Nhập từ khóa"
                                                   class="input-medium" name="txtSearch">
                                            <button type="submit" style="top: 57px; left: 757px;position: absolute;"><i class="icon-search" ></i></button>

                                        </div>
                                    </li>
                                </form>
                                <% if(typeof notification !== 'undefined' && notification){ %>
                                <div style="font-size: large; margin-top: 200px">
                                    <center><%= notification %></center>
                                </div>
                                <% }else{ %>
                                <% arrPost.forEach(function (p){ %>
                                <article id="post-338"
                                         class="post-338 post type-post status-publish format-video hentry category-am-nhac-nghe-thuat clearfix box full-width"
                                         role="article">

                                    <header>
                                        <h2 class="post-title"><a style="text-decoration: none;color: #E93071;"
                                                                  href="/postByName?name=<%= p.title %>"><%= p.title %></a>
                                        </h2>
                                    </header>

                                    <div class="entry-content">
                                        <p><%= p.description %></p>
                                    </div>

                                    <div class="meta clearfix">
                                        <div class="icon icon-video"></div>
                                        <span class="post-date"><p style="font-size: 10px;"><%= p.date %></p></span>
	<span class="post-comments">
			<a href="#" title="Comment on Saint Young Men, khi Chúa và Phật cùng tái sinh cõi trần">
                <fb:comments-count xmlns="http://ogp.me/ns/fb#"
                                   href="http://blog360.vn/saint-young-men-khi-chua-va-phat-cung-tai-sinh-coi-tran/"
                                   fb-xfbml-state="rendered" class=" fb_comments_count_zero"><span
                            class="fb_comments_count">0</span></fb:comments-count>
                Comments</a>	</span>
                                    </div>
                                </article>
                                <% }); %>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    <footer>
                        <% include ../views/partials/footer %>
                    </footer>
                </div>
            </main>
        </div>
    </div>
</form>
</body>
</html>